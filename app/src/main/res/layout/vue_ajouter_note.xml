<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vue.AjouterNote">

    <TextView
        android:id="@+id/vue_titre_ajouter_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Page ajouter note" />

    <TextView
        android:id="@+id/vue_label_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date" />

    <EditText
        android:id="@+id/vue_ajouter_note_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/vue_label_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description" />

    <EditText
        android:id="@+id/vue_ajouter_note_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/action_enregistrer_node"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enregistrer la note" />
</LinearLayout>